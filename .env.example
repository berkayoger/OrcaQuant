# JWT
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRES=3600    # saniye
JWT_REFRESH_TOKEN_EXPIRES=86400  # saniye

# Mail (opsiyonel, şifre sıfırlama için)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Diğer ayarlar
BACKEND_PLAN_PRICES_BASIC=9.99
BACKEND_PLAN_PRICES_ADVANCED=24.99
BACKEND_PLAN_PRICES_PREMIUM=49.99

# Otomatik Uyarılar için
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
ADMIN_ALERT_EMAIL=senin@email.com

# ---------- STAGING ORTAMI ----------
# Caddy için FQDN
STAGING_FQDN=staging.example.com

# Backend app import path denemeleri (virgülle ayrık)
APP_IMPORT_CANDIDATES=backend.app:create_app,backend.app:app,app:create_app,app:app

# Flask/uygulama gizli anahtarları
SECRET_KEY=please-change-me
JWT_SECRET_KEY=please-change-me-too

# Veritabanı & cache (opsiyonel — eğer kendi managed servislerin varsa .env.staging'e yaz)
DATABASE_URL=postgresql+psycopg2://user:pass@db:5432/app
REDIS_URL=redis://redis:6379/0

