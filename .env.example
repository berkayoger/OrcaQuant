# ====== OrcaQuant Production Environment Example ======
APP_DOMAIN=orcaquant.example.com
APP_ENV=production
FLASK_ENV=production
PREFERRED_URL_SCHEME=https
SERVER_NAME=orcaquant.example.com
SECRET_KEY=CHANGE_ME_STRONG_SECRET
LOG_LEVEL=INFO

# --- Backend ---
PORT=5000
# PostgreSQL örnek:
# DATABASE_URL=postgresql://orcaquant:STRONG_PASS@localhost:5432/orcaquant_prod
DATABASE_URL=sqlite:////data/ytd_crypto.db
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@localhost:6379/0
SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": true, "pool_recycle": 1800}
ALLOWED_ORIGINS=https://orcaquant.example.com
ENABLE_METRICS=true
RATE_LIMITS=200 per minute;5 per second

# Observability
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=

# Security & Compliance
CORS_ORIGINS=https://orcaquant.example.com
ENABLE_AUDIT_LOGGING=true
AUDIT_FALLBACK_LOG_DIR=/var/log/orcaquant_audit_logs
AUDIT_FALLBACK_FILE_SIZE_LIMIT_MB=50

# Gunicorn
GUNICORN_WORKERS=
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_LOGLEVEL=info
GUNICORN_WORKER_CLASS=gthread

# CI/CD
REGISTRY=ghcr.io
REGISTRY_IMAGE=ghcr.io/<owner>/orcaquant
GIT_SHA=dev

# SSL / Let's Encrypt (scripts/letsencrypt-init.sh için)
LE_EMAIL=admin@example.com

# --- External Services ---
# CoinGecko
COINGECKO_API_KEY=
COINGECKO_BASE=https://api.coingecko.com/api/v3
COINGECKO_RPS=3                  # saniyede izinli istek
COINGECKO_CACHE_TTL=30           # sn, fiyat cache süresi

# Email (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=alerts@orcaquant.example.com

# Slack/Telegram
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
