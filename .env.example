# Genel
FLASK_ENV=development
SECRET_KEY=

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ytdcrypto

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Iyzico (ödeme sağlayıcı)
IYZICO_API_KEY=
IYZICO_SECRET=
