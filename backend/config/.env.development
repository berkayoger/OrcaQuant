# Development ortamı
# NOT: Gizli değerleri .env yerine Docker secrets ile verin (bkz. /secrets klasörü).
YTD_ENV=development
YTD_DEBUG=true

# CORS Configuration
YTD_CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001
YTD_CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
YTD_CORS_ALLOW_HEADERS=Content-Type,Authorization,X-CSRF-Token,X-Request-Id
YTD_CORS_EXPOSE_HEADERS=X-RateLimit-Remaining,X-Request-Id,X-Total-Count
YTD_CORS_SUPPORTS_CREDENTIALS=true
YTD_CORS_MAX_AGE=3600

# Rate Limiting
YTD_RATE_LIMIT_DEFAULT=200/minute
YTD_RATE_LIMIT_LOGIN=10/minute
YTD_RATE_LIMIT_CSRF_TOKEN=100/minute
YTD_RATE_LIMIT_HEADERS_ENABLED=true
YTD_RATE_LIMIT_STRATEGY=fixed-window-elastic-expiry
YTD_RATE_LIMIT_WHITELIST=127.0.0.1,::1,192.168.0.0/16

# Security & Banning
YTD_AUTO_BAN_THRESHOLD=200
YTD_AUTO_BAN_DURATION_SECONDS=86400
YTD_SUSPICIOUS_ACTIVITY_THRESHOLD=50

# CSRF
YTD_CSRF_ENABLED=true
YTD_CSRF_COOKIE_NAME=XSRF-TOKEN
YTD_CSRF_HEADER_NAME=X-CSRF-Token
YTD_CSRF_TIME_LIMIT_SECONDS=3600
YTD_CSRF_PROTECT_METHODS=POST,PUT,PATCH,DELETE
YTD_CSRF_EXEMPT_ENDPOINTS=/api/v1/auth/login,/api/v1/auth/register

# Session & Cookies
YTD_SESSION_COOKIE_NAME=ytd_session
YTD_SESSION_COOKIE_SECURE=false
YTD_SESSION_COOKIE_SAMESITE=Lax
YTD_SESSION_COOKIE_HTTPONLY=true
YTD_SESSION_LIFETIME_HOURS=24
YTD_REMEMBER_COOKIE_DURATION_DAYS=30

# JWT Configuration
YTD_JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
YTD_JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
YTD_JWT_KEY_VERSION=1

# API Security
YTD_API_REQUIRE_AUTH=true
YTD_API_KEY_HEADER=X-API-Key
YTD_MAX_CONTENT_LENGTH_MB=16

# Security Headers
YTD_FORCE_HTTPS=false
YTD_STRICT_TRANSPORT_SECURITY=true
YTD_STRICT_TRANSPORT_SECURITY_MAX_AGE=31536000

# These should be provided via docker secrets in production:
# YTD_SECRET_KEY=your-secret-key-here
# YTD_JWT_SECRET=your-jwt-secret-here
# YTD_DATABASE_URL=postgresql+psycopg2://user:pass@localhost:5432/ytd
# YTD_REDIS_URL=redis://localhost:6379/0

