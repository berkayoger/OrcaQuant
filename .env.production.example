# Production Environment Configuration
# This file shows production-specific configuration
# Use encrypted values for all sensitive data

# Security headers (enable in prod)
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# Application Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Security Configuration (REQUIRED)
SECRET_KEY=MUST_BE_SET_FROM_SECURE_SOURCE
JWT_SECRET_KEY=MUST_BE_SET_FROM_SECURE_SOURCE
MASTER_ENCRYPTION_KEY=MUST_BE_SET_FROM_SECURE_SOURCE

# Force HTTPS in production
FORCE_HTTPS=True

# Database Configuration (use encrypted connection string)
DATABASE_URL_ENCRYPTED=your-encrypted-database-url

# API Keys (use encrypted versions)
COINGECKO_API_KEY_ENCRYPTED=your-encrypted-coingecko-key
CRYPTOCOMPARE_API_KEY_ENCRYPTED=your-encrypted-cryptocompare-key

# Redis Configuration (use encrypted password)
REDIS_URL=redis://production-redis-host:6379/0
REDIS_PASSWORD_ENCRYPTED=your-encrypted-redis-password

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=/var/log/ytd-kopya/app.log
LOG_MAX_SIZE=50485760
LOG_BACKUP_COUNT=10

# Rate Limiting (stricter in production)
RATE_LIMIT_DEFAULT=50/minute

# Email Configuration
MAIL_SERVER=your-production-mail-server
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME_ENCRYPTED=your-encrypted-mail-username
MAIL_PASSWORD_ENCRYPTED=your-encrypted-mail-password

# Monitoring and Alerting
ENABLE_SECURITY_MONITORING=True
SECURITY_ALERT_EMAIL=security@yourcompany.com

# External Services
EXTERNAL_API_TIMEOUT=10
EXTERNAL_API_RETRY_ATTEMPTS=2
